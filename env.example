# Environment Configuration
# Copy this file to .env and update the values

# Flask Configuration
SECRET_KEY=your-secret-key-here
FLASK_ENV=development

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-here

# Database Configuration
# For PostgreSQL (recommended for production)
DATABASE_URL=postgresql://username:password@localhost/crop_recommendation

# For SQLite (development only)
# DATABASE_URL=sqlite:///crop_recommendation.db

# External API Configuration (optional - currently using mock data)
SOIL_API_URL=https://mock-soil-api.com
WEATHER_API_URL=https://mock-weather-api.com
MARKET_API_URL=https://mock-market-api.com

# ML Model Configuration (optional)
DISEASE_MODEL_PATH=models/disease_classifier.pkl
CROP_RECOMMENDATION_MODEL_PATH=models/crop_recommender.pkl

# File Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# Translation Service Configuration
TRANSLATION_SERVICE=mock
# GOOGLE_TRANSLATE_API_KEY=your-google-translate-key
# AZURE_TRANSLATE_KEY=your-azure-translate-key

# Voice Processing Configuration
VOICE_PROCESSING_SERVICE=mock
# AZURE_SPEECH_KEY=your-azure-speech-key
# GOOGLE_SPEECH_KEY=your-google-speech-key

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=app.log
